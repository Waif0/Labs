#include <stdio.h>
#include <math.h>
#include <stdlib.h>
#define FUNCTION tan(arr[i])*sqrt(arr[i])
#define P acos(-1)

void ForOutput(int, float*, float*);
void WhileOutput(int, float*, float*);
void DowhileOutput(int, float*, float*);
void ReadValues(int*, float*, float*);

int main()
{
    //tg(x)*sqrt(x)
    int size;
    float start, end;

    ReadValues(&size, &start, &end);
    while ((size<=1)||(start>end))
    {
        ReadValues(&size, &start, &end);
        printf("вы что-то сделали не так");
    }

    float* arr = (float*)malloc(size * sizeof(float));
    float* arr2 = (float*)malloc(size * sizeof(float));

    for (int i = 0; i < size; ++i)
    {
        arr[i] = start+((end-start)/(size-1))*i;
        //printf("%f\n", arr[i]);
        if ( (arr[i]>0) && ( (arr[i]*2.0/P) != (int) (arr[i]*2.0/P) ) )
            arr2[i] = FUNCTION;
        else
            arr2[i] = -999;



    }
    printf("\n");

    ForOutput(size, arr, arr2);
    WhileOutput(size, arr, arr2);
    DowhileOutput(size, arr, arr2);

    free(arr);
    free(arr2);
}

void ForOutput(int size, float* arr, float* arr2)
{
    printf("for\nx\t| ");
    for (int i = 0; i < size; ++i)
        printf("%.5f\t| ", arr[i]);

    printf("\nf(x)\t| ");
    for (int i = 0; i < size; ++i)
        printf("%.5f\t| ", arr2[i]);
    printf("\n\n");
}

void WhileOutput(int size, float* arr, float* arr2)
{
    int i=0;
    printf("while\nx\t| ");
    while (i<size)
    {
        printf("%.5f\t| ", arr[i]);
        ++i;
    }
    i = 0;
    printf("\nf(x)\t| ");
    while (i<size)
    {
        printf("%.5f\t| ", arr2[i]);
        ++i;
    }
    printf("\n\n");
}

void DowhileOutput(int size, float* arr, float* arr2)
{
    int i=0;
    printf("doWhile\nx\t| ");
    if (size!=0)
    {
        do
        {
            printf("%.5f\t| ", arr[i]);
            ++i;
        } while (i<size);
        i = 0;
        printf("\nf(x)\t| ");
        do
        {
            printf("%.5f\t| ", arr2[i]);
            ++i;
        } while (i<size);
    }
}

void ReadValues(int* size, float* start, float* end)
{
    printf("input value amount\n");
    scanf(" %d", size);
    printf("input start value\n");
    scanf(" %f", start);
    printf("input end value \n");
    scanf(" %f", end);
    printf("\n\n");
}
