#include <stdio.h>
#include <math.h>

void UserInputDot(float*, float*);
void UserInputTriangle(float*, float*, float*, float*, float*, float*);
int Problem1(float, float, float, float, float, float);
void Problem2();

int main()
{
    Problem2();
    return 0;
}

void UserInputDot(float* x, float* y)
{
    printf("Введите координаты точки x, y\n");
    scanf("%f", x);
    scanf("%f", y);
}

void UserInputTriangle(float* x1, float* y1, float* x2, float* y2, float* x3, float* y3)
{
    printf("Введите координаты первой точки треугольника x1, y1\n");
    scanf("%f", x1);
    scanf("%f", y1);
    printf("\n Введите координаты второй точки треугольника x2, y2\n");
    scanf("%f", x2);
    scanf("%f", y2);
    printf("\nВведите координаты третьей точки треугольника x3, y3\n");
    scanf("%f", x3);
    scanf("%f", y3);
}

int Problem1(float x1, float y1, float x2, float y2, float x3, float y3)
{
    float k, b, diff, diff1, diff2;
    
    diff = x1-x2; 
    if (diff == 0)
    {
        if (x3>x1)
            return 1;
        else if (x3<x1)
            return 0;
        else
            return 2;
    }
    
    diff1 = y1-y2; 
    diff2 = x1*y2-x2*y1; 
    k = diff1/diff; 
    b = diff2/diff; 
    
    if  (y3==x3*k+b)
        return 2;
    else
    {
        if (y3>x3*k+b)
            return 1;
        else
            return 0;
    }
    return 0;
}

void Problem2()
{
    float x1, y1, x2, y2, x3, y3, x4, y4; 
    int y4for1, y4for2, y4for3, y3for1, y2for3, y1for2;
    
    UserInputTriangle(&x1, &y1, &x2, &y2, &x3, &y3);
    while (((x1!=x2) && (y3==round(x3*((y1-y2)/(x1-x2))+((x1*y2-x2*y1)/(x1-x2))))) || ((x1==x2) && (x2==x3)))
    {
        printf("это не треугольник\n");
        UserInputTriangle(&x1, &y1, &x2, &y2, &x3, &y3);
    }
    UserInputDot(&x4, &y4);
    
    y4for1 = Problem1(x1, y1, x2, y2, x4, y4);
    y4for2 = Problem1(x2, y2, x3, y3, x4, y4);
    y4for3 = Problem1(x3, y3, x1, y1, x4, y4);
    y3for1 = Problem1(x1, y1, x2, y2, x3, y3);
    y2for3 = Problem1(x3, y3, x1, y1, x2, y2);
    y1for2 = Problem1(x2, y2, x3, y3, x1, y1);
    
    if ((y4for1==2)||(y4for2==2)||(y4for3==2))
    {
        printf("сектор 8");
        return;
    }
    if ( (y4for1!=y3for1) && (y4for2!=y1for2) )   
        printf("сектор 1\n");
    if ( (y4for1==y3for1) && (y4for2!=y1for2) && (y4for3==y2for3) ) 
        printf("сектор 2\n");
    if ( (y4for2!=y1for2) && (y4for3!=y2for3) )  
        printf("сектор 3\n");
    if ( (y4for3!=y2for3) && (y4for1==y3for1) && (y4for2==y1for2) ) 
        printf("сектор 4\n");
    if ( (y4for3!=y2for3) && (y4for1!=y3for1) )  
        printf("сектор 5\n");
    if ( (y4for1!=y3for1) && (y4for3==y2for3) && (y4for2==y1for2) )   
        printf("сектор 6\n");
    if ( (y4for1==y3for1) && (y4for2==y1for2) && (y4for3==y2for3) )   
        printf("сектор 7\n");
}
